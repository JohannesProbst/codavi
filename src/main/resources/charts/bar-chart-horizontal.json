{
  "width": 400,
  "height": 200,
  "padding": {
    "top": 10,
    "left": 30,
    "bottom": 60,
    "right": 40
  },
  "dataSchema": {

    "fields": [
      {
        "field":"price",
        "selector":"/price/text()",
        "type":"java.lang.Double"
      },
      {
        "field":"short",
        "selector":"/short/text()",
        "type":"java.lang.String"
      }
    ],
    "handling": {
      "mode": "reloadAll",
      "postProcess":false
    }
  },
  "data": [
    {
      "name": "table",
      "transform": [
        {"type": "filter","test": "datum.price >  1000 && datum.price < 5000 "}
      ]
    }
  ],
  "scales": [
    {
      "name": "cat",
      "type": "ordinal",
      "domain": {"data": "table", "field": "short"},
      "range": "height",
      "padding": 0.2
    },
    {
      "name": "val",
      "type": "linear",
      "domain": {"data": "table", "field": "price"},
      "range": "width",
      "round": true,
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "short"},
      "range": "category10"
    }
  ],
  "axes": [
    {"type": "y", "scale": "cat", "tickSize": 0, "tickPadding": 8},
    {"type": "x", "scale": "val"}
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "data": "table",
        "transform": [{"type":"facet", "groupby": ["short"]}]
      },
      "properties": {
        "enter": {
          "y": {"scale": "cat", "field": "key"},
          "height": {"scale": "cat", "band": true}
        }
      },
      "scales": [
        {
          "name": "pos",
          "type": "ordinal",
          "range": "height",
          "domain": {"field": "short"}
        }
      ],
      "marks": [
        {
          "name": "bars",
          "type": "rect",
          "properties": {
            "enter": {
              "y": {"scale": "pos", "field": "short"},
              "height": {"scale": "pos", "band": true},
              "x": {"scale": "val", "field": "price"},
              "x2": {"scale": "val", "value": 0},
              "fill": {"scale": "color", "field": "short"}
            }
          }
        },
        {
          "type": "text",
          "from": {"mark": "bars"},
          "properties": {
            "enter": {
              "x": {"field": "x2", "offset": -5},
              "y": {"field": "y"},
              "dy": {"field": "height", "mult": 0.5},
              "fill": {"value": "white"},
              "align": {"value": "right"},
              "baseline": {"value": "middle"},
              "text": {"field": "datum.value"}
            }
          }
        }
      ]
    }
  ]
}