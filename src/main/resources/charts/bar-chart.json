{
  "width": 400,
  "height": 200,
  "padding": {
    "top": 10,
    "left": 30,
    "bottom": 30,
    "right": 10
  },
  "dataSchema": {
    "fields": [
      {
        "field":"temp",
        "selector":"/value/text()",
        "type":"java.lang.Double"
      },
      {
        "field":"timestamp",
        "selector":"/time/text()",
        "type":"java.lang.String",
        "transformTo":"TIMESTAMP"
      }
    ],
    "handling": {
      "mode": "lifo",
      "size":5
    }
  },
  "data": [
    {
      "name": "table",
      "format": {"type": "json", "parse": {"temp":"number", "timestamp":"date"}}
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "ordinal",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "timestamp"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "table",
        "field": "temp"
      },
      "nice": true
    }
  ],
  "axes": [
    {"type": "x", "scale": "x", "formatType":"time",
      "format":"%Y-%m-%dT%H:%M:%S.%LZ",
      "properties":{
        "labels": {
          "fill": {"value": "steelblue"},
          "angle": {"value": 50},
          "fontSize": {"value": 14},
          "align": {"value": "left"},
          "baseline": {"value": "middle"},
          "dx": {"value": 3}
        }
      }
    },
    {"type": "y", "scale": "y"}
  ],
  "marks":
  [
    {
      "type": "rect",
      "from": {
        "data": "table"
      },
      "properties": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "timestamp"
          },
          "width": {
            "scale": "x",
            "band": true,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "temp"
          },
          "y2": {
            "scale": "y",
            "value": 0
          }
        },
        "update": {
          "fill": {
            "value": "steelblue"
          },
          "x": {
            "scale": "x",
            "field": "timestamp"
          },
          "width": {
            "scale": "x",
            "band": true,
            "offset": -1
          },
          "y": {
            "scale": "y",
            "field": "temp"
          },
          "y2": {
            "scale": "y",
            "value": 0
          }

        },
        "hover": {
          "fill": {
            "value": "red"
          }
        }
      }
    }
  ]
}
